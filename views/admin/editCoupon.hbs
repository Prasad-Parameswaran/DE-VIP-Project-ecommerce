        <div class="col-md-6 grid-margin">
            <div class="card card-white h-100" style="margin: 0 auto;">
                <div class="card-heading clearfix text-center" >
                    <h4 class="card-title">EDIT COUPON</h4>
                </div>
                <div >
                    <div class="card-body">
                        <form method="post" action="/admin/postCoupon/?id={{coupon._id}}">
                            <div class="form-group">
                                <label for="exampleInput7">Coupon Code</label>
                                <input type="text" name="code" value="{{coupon.code}}" class="form-control" id="exampleInput7">
                            </div>
                            <div class="form-group">
                                <label for="exampleInput8">Percentage</label>
                                <input type="number" name="percentage" value="{{coupon.percentage}}" class="form-control" id="exampleInput8">
                            </div>
                            {{!-- <div class="form-group">
                                <label for="exampleInput8">Amount</label>
                                <input type="number" name="amount" class="form-control" id="exampleInput8">
                            </div> --}}
